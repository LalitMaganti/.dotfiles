set $mod Mod4

# Some useful colors
set $black       #212121
set $darkblack   #000000
set $red         #fb4934
set $darkred     #cc241d
set $green       #b8bb26
set $darkgreen   #98971a
set $yellow      #fabd2f
set $darkyellow  #d79921
set $blue        #83a598
set $darkblue    #458588
set $magenta     #d3869b
set $darkmagenta #b16286
set $cyan        #8ec07c
set $darkcyan    #689d6a
set $white       #ebdbb2
set $darkwhite   #a89984

set $ws1  "1:  "
set $ws2  "2:  "
set $ws3  "3:  "
set $ws4  "4:  "
set $ws5  "5:  "
set $ws6  "6:  "
set $ws7  "7:  "
set $ws8  "8:  "
set $ws9  "9:  "
set $ws10 "10:  "

force_display_urgency_hint 0 ms
focus_on_window_activation urgent

font pango:Hack, FontAwesome 12

# Focus with vim keybindings
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move with vim keybindings
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Deal with splits
bindsym $mod+o split h
bindsym $mod+p split v

# Window management
bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Tab workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Resize
set $mode_resize resize
bindsym $mod+r mode "$mode_resize"
mode "$mode_resize" {
    bindsym Left resize shrink width 10 px or 1 ppt
    bindsym Down resize grow height 10 px or 1 ppt
    bindsym Up resize shrink height 10 px or 1 ppt
    bindsym Right resize grow width 10 px or 1 ppt

    bindsym Shift+Left resize shrink width 20 px or 5 ppt
    bindsym Shift+Down resize grow height 20 px or 5 ppt
    bindsym Shift+Up resize shrink height 20 px or 5 ppt
    bindsym Shift+Right resize grow width 20 px or 5 ppt

    bindsym 1 mode "default", resize set 1000 600
    bindsym 2 mode "default", resize set 1500 600
    bindsym 3 mode "default", resize set 1200 1000

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Bar
bar {
    status_command    i3status
    position top
    font pango:Hack, FontAwesome 9
    strip_workspace_numbers yes
    bindsym button4 nop
    bindsym button5 nop
    tray_padding 0
    colors {
        statusline         $white
        background         $black
        separator          $yellow

        focused_workspace  $black $black $blue
        inactive_workspace $black $black $white
        active_workspace   $black $black $white
        urgent_workspace   $darkred     $darkred     $black
        binding_mode       $black $black $blue
    }
}

new_window 1pixel
assign     [class="(?i)chrome"]                       $ws1
for_window [class="Spotify"]        move to workspace $ws9

bindsym $mod+Return exec gnome-terminal
bindsym $mod+d exec dmenu_run
bindsym $mod+t exec nautilus --no-desktop
bindsym $mod+b exec google-chrome-stable
bindsym $mod+m exec fish -c spotify

exec --no-startup-id feh --bg-fill /homes/lrm113/Pictures/WordsofRadiance_new_1920x1080.jpg
exec --no-startup-id gnome-screensaver
exec --no-startup-id xrdb -merge ~/.Xresources

bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +5%
bindsym XF86AudioPlay exec fish -c "playerctl play-pause"
bindsym Control+p exec fish -c "playerctl play-pause"
bindsym Control+plus exec fish -c "playerctl next"
bindsym Control+minus exec fish -c "playerctl previous"
bindsym Control+Shift+l exec gnome-screensaver-command -l
